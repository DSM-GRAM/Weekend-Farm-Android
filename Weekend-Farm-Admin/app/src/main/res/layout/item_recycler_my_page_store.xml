<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_my_page_store_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_star"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/text_my_page_store_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="itemName"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_my_page_store_item"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/text_my_page_store_item_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="itemCost"
                app:layout_constraintStart_toEndOf="@id/text_my_page_store_item_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="10dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>