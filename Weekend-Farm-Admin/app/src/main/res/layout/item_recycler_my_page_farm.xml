<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_add_my_page_name"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_board"
                app:layout_constraintBottom_toTopOf="@id/image_add_my_page_cost"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_add_my_page_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:inputType="text"
                android:text="roomName"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/image_add_my_page_name"
                app:layout_constraintStart_toEndOf="@id/image_add_my_page_name"
                app:layout_constraintTop_toTopOf="@id/image_add_my_page_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="양식장"
                android:textColor="@color/colorGrayLight"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/edit_add_my_page_name"
                app:layout_constraintStart_toEndOf="@id/edit_add_my_page_name"
                app:layout_constraintTop_toTopOf="@id/edit_add_my_page_name" />

            <ImageView
                android:id="@+id/image_add_my_page_cost"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/icon_cost"
                app:layout_constraintBottom_toTopOf="@id/image_add_my_page_fish_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_add_my_page_name" />

            <EditText
                android:id="@+id/edit_add_my_page_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:inputType="number"
                android:text="roomCost"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/image_add_my_page_cost"
                app:layout_constraintStart_toEndOf="@id/image_add_my_page_cost"
                app:layout_constraintTop_toTopOf="@id/image_add_my_page_cost" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="원/월"
                android:textColor="@color/colorGrayLight"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/edit_add_my_page_cost"
                app:layout_constraintStart_toEndOf="@id/edit_add_my_page_cost"
                app:layout_constraintTop_toTopOf="@id/edit_add_my_page_cost" />

            <ImageView
                android:id="@+id/image_add_my_page_fish_number"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/icon_fish"
                app:layout_constraintBottom_toTopOf="@id/image_add_my_page_water_temperature"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_add_my_page_cost" />

            <EditText
                android:id="@+id/edit_add_my_page_fish_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:inputType="number"
                android:text="fishNumber"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/image_add_my_page_fish_number"
                app:layout_constraintTop_toTopOf="@id/image_add_my_page_fish_number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마리 수용 가능"
                android:textColor="@color/colorGrayLight"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/edit_add_my_page_fish_number"
                app:layout_constraintStart_toEndOf="@id/edit_add_my_page_fish_number"
                app:layout_constraintTop_toTopOf="@id/edit_add_my_page_fish_number" />

            <ImageView
                android:id="@+id/image_add_my_page_water_temperature"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/icon_temperature"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_add_my_page_fish_number" />

            <TextView
                android:id="@+id/text1_add_my_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평균 물 온도"
                android:textColor="@color/colorGrayLight"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/image_add_my_page_water_temperature"
                app:layout_constraintStart_toEndOf="@id/image_add_my_page_water_temperature"
                app:layout_constraintTop_toTopOf="@id/image_add_my_page_water_temperature" />

            <EditText
                android:id="@+id/edit_add_my_page_water_temparature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="waterTemparature"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/text1_add_my_page"
                app:layout_constraintStart_toEndOf="@id/text1_add_my_page"
                app:layout_constraintTop_toTopOf="@id/text1_add_my_page" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@color/colorGrayLight"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@id/edit_add_my_page_water_temparature"
                app:layout_constraintStart_toEndOf="@id/edit_add_my_page_water_temparature"
                app:layout_constraintTop_toTopOf="@id/edit_add_my_page_water_temparature" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>