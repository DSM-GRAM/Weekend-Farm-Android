<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_add_my_inform_room_name"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_board"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/image_add_my_inform_room_cost"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/text_add_my_inform_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="roomName"
                app:layout_constraintStart_toEndOf="@id/image_add_my_inform_room_name"
                app:layout_constraintTop_toTopOf="@id/image_add_my_inform_room_name"
                app:layout_constraintBottom_toBottomOf="@id/image_add_my_inform_room_name"
                android:layout_marginStart="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="양식장"
                android:textSize="14sp"
                android:textColor="@color/colorGrayLight"
                app:layout_constraintStart_toEndOf="@id/text_add_my_inform_room_name"
                app:layout_constraintTop_toTopOf="@id/text_add_my_inform_room_name"
                app:layout_constraintBottom_toBottomOf="@id/text_add_my_inform_room_name"
                />
            <ImageView
                android:id="@+id/image_add_my_inform_room_cost"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_cost"
                app:layout_constraintTop_toBottomOf="@id/image_add_my_inform_room_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toTopOf="@id/image_add_my_inform_room_fish_number"/>
            <TextView
                android:id="@+id/text_add_my_inform_room_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="roomCost"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/image_add_my_inform_room_cost"
                app:layout_constraintTop_toTopOf="@id/image_add_my_inform_room_cost"
                app:layout_constraintBottom_toBottomOf="@id/image_add_my_inform_room_cost"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원/월"
                android:textSize="14sp"
                android:textColor="@color/colorGrayLight"
                app:layout_constraintStart_toEndOf="@id/text_add_my_inform_room_cost"
                app:layout_constraintTop_toTopOf="@id/text_add_my_inform_room_cost"
                app:layout_constraintBottom_toBottomOf="@id/text_add_my_inform_room_cost"
                android:layout_marginStart="5dp"/>
            <ImageView
                android:id="@+id/image_add_my_inform_room_fish_number"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_fish"
                app:layout_constraintTop_toBottomOf="@id/image_add_my_inform_room_cost"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toTopOf="@id/image_add_my_inform_room_water_temperature"/>
            <TextView
                android:id="@+id/text_add_my_inform_room_fish_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:text="fishNumber"
                app:layout_constraintStart_toEndOf="@id/image_add_my_inform_room_fish_number"
                app:layout_constraintTop_toTopOf="@id/image_add_my_inform_room_fish_number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마리 수용 가능"
                android:textSize="14sp"
                android:textColor="@color/colorGrayLight"
                app:layout_constraintStart_toEndOf="@id/text_add_my_inform_room_fish_number"
                app:layout_constraintTop_toTopOf="@id/text_add_my_inform_room_fish_number"
                app:layout_constraintBottom_toBottomOf="@id/text_add_my_inform_room_fish_number"/>
            <ImageView
                android:id="@+id/image_add_my_inform_room_water_temperature"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_temperature"
                app:layout_constraintTop_toBottomOf="@id/image_add_my_inform_room_fish_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/text1_add_my_inform_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평균 물 온도"
                android:textColor="@color/colorGrayLight"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/image_add_my_inform_room_water_temperature"
                app:layout_constraintTop_toTopOf="@id/image_add_my_inform_room_water_temperature"
                app:layout_constraintBottom_toBottomOf="@id/image_add_my_inform_room_water_temperature" />
            <TextView
                android:id="@+id/text_add_my_inform_room_water_temparature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="waterTemparature"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/text1_add_my_inform_room"
                app:layout_constraintTop_toTopOf="@id/text1_add_my_inform_room"
                app:layout_constraintBottom_toBottomOf="@id/text1_add_my_inform_room"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textSize="17sp"
                android:textColor="@color/colorGrayLight"
                app:layout_constraintStart_toEndOf="@id/text_add_my_inform_room_water_temparature"
                app:layout_constraintTop_toTopOf="@id/text_add_my_inform_room_water_temparature"
                app:layout_constraintBottom_toBottomOf="@id/text_add_my_inform_room_water_temparature"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>