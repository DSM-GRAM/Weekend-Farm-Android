<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMyInform.AddMyInformActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_add_my_inform"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="정보 작성"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_add_my_inform"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_weight="1"
        tools:layout_editor_absoluteX="16dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edit_add_my_inform_farm_name"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/baseline_opacity"
                android:hint="양식장 이름"
                android:textColor="@color/colorGrayLight"
                android:textColorHint="@color/colorGrayLight"
                android:textSize="14sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.8" />

            <EditText
                android:id="@+id/edit_add_my_inform_farm_phone_number"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/icon_call"
                android:hint="양식장 전화번호"
                android:inputType="phone"
                android:textColor="@color/colorGrayLight"
                android:textColorHint="@color/colorGrayLight"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_add_my_inform_farm_name"
                app:layout_constraintWidth_percent="0.8" />

            <EditText
                android:id="@+id/edit_add_my_inform_farm_address"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/icon_address"
                android:hint="양식장 주소"
                android:textColor="@color/colorGrayLight"
                android:textColorHint="@color/colorGrayLight"
                android:textSize="14sp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_add_my_inform_farm_phone_number"
                app:layout_constraintWidth_percent="0.8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="10dp"
                android:text="부가설명"
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/card_add_my_inform_additional_inform"
                app:layout_constraintStart_toStartOf="@id/card_add_my_inform_additional_inform" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_add_my_inform_additional_inform"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_add_my_inform_farm_address"
                app:layout_constraintWidth_percent="0.9">

                <EditText
                    android:id="@+id/text_add_my_inform_additional_inform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:inputType="text"
                    android:textColor="@color/colorGrayLight"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="내 양식장 목록"
                android:textColor="@color/colorGray"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/card_add_my_room"
                app:layout_constraintStart_toStartOf="@id/card_add_my_inform_additional_inform" />

            <Button
                android:id="@+id/btn_add_my_inform_add_room"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/roundstyle_btn"
                android:text="추가"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/card_add_my_room"
                app:layout_constraintEnd_toEndOf="parent" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_add_my_room"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_add_my_inform_additional_inform"
                app:layout_constraintWidth_percent="0.9">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image_add_my_inform_room_name"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/icon_board"
                        app:layout_constraintBottom_toTopOf="@id/image_add_my_inform_room_cost"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/edit_add_my_inform_room_name"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:layout_marginStart="10dp"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@id/image_add_my_inform_room_name"
                        app:layout_constraintStart_toEndOf="@id/image_add_my_inform_room_name"
                        app:layout_constraintTop_toTopOf="@id/image_add_my_inform_room_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="양식장"
                        android:textColor="@color/colorGrayLight"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/edit_add_my_inform_room_name"
                        app:layout_constraintStart_toEndOf="@id/edit_add_my_inform_room_name"
                        app:layout_constraintTop_toTopOf="@id/edit_add_my_inform_room_name" />

                    <ImageView
                        android:id="@+id/image_add_my_inform_room_cost"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/icon_cost"
                        app:layout_constraintBottom_toTopOf="@id/image_add_my_inform_room_fish_number"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_add_my_inform_room_name" />

                    <EditText
                        android:id="@+id/edit_add_my_inform_room_cost"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@id/image_add_my_inform_room_cost"
                        app:layout_constraintStart_toEndOf="@id/image_add_my_inform_room_cost"
                        app:layout_constraintTop_toTopOf="@id/image_add_my_inform_room_cost" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="원/월"
                        android:textColor="@color/colorGrayLight"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/edit_add_my_inform_room_cost"
                        app:layout_constraintStart_toEndOf="@id/edit_add_my_inform_room_cost"
                        app:layout_constraintTop_toTopOf="@id/edit_add_my_inform_room_cost" />

                    <ImageView
                        android:id="@+id/image_add_my_inform_room_fish_number"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/icon_fish"
                        app:layout_constraintBottom_toTopOf="@id/image_add_my_inform_room_water_temperature"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_add_my_inform_room_cost" />

                    <EditText
                        android:id="@+id/edit_add_my_inform_room_fish_number"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:layout_marginStart="10dp"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/image_add_my_inform_room_fish_number"
                        app:layout_constraintTop_toTopOf="@id/image_add_my_inform_room_fish_number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마리 수용 가능"
                        android:textColor="@color/colorGrayLight"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/edit_add_my_inform_room_fish_number"
                        app:layout_constraintStart_toEndOf="@id/edit_add_my_inform_room_fish_number"
                        app:layout_constraintTop_toTopOf="@id/edit_add_my_inform_room_fish_number" />

                    <ImageView
                        android:id="@+id/image_add_my_inform_room_water_temperature"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/icon_temperature"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_add_my_inform_room_fish_number" />

                    <TextView
                        android:id="@+id/text1_add_my_inform_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="평균 물 온도"
                        android:textColor="@color/colorGrayLight"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/image_add_my_inform_room_water_temperature"
                        app:layout_constraintStart_toEndOf="@id/image_add_my_inform_room_water_temperature"
                        app:layout_constraintTop_toTopOf="@id/image_add_my_inform_room_water_temperature" />

                    <EditText
                        android:id="@+id/edit_add_my_inform_room_water_temparature"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/text1_add_my_inform_room"
                        app:layout_constraintStart_toEndOf="@id/text1_add_my_inform_room"
                        app:layout_constraintTop_toTopOf="@id/text1_add_my_inform_room" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="°C"
                        android:textColor="@color/colorGrayLight"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="@id/edit_add_my_inform_room_water_temparature"
                        app:layout_constraintStart_toEndOf="@id/edit_add_my_inform_room_water_temparature"
                        app:layout_constraintTop_toTopOf="@id/edit_add_my_inform_room_water_temparature" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_add_my_inform_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/card_add_my_room"></android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/btn_add_my_inform"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundstyle_btn"
                android:text="작성완료"
                android:textColor="@color/colorWhite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_add_my_inform_rooms"
                app:layout_constraintWidth_percent="0.75" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>