<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginTop="26.5dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/date_image"
        android:background="@drawable/baseline_date_range_24"/>

    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/date_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_text"
        android:text="2018 ~ 2019"/>

    <ImageView
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18.5dp"
        app:layout_constraintTop_toBottomOf="@id/date_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/baseline_attach_money_24"
        android:id="@+id/money_image"/>

    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/date_image"
        app:layout_constraintLeft_toRightOf="@id/money_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/money_text"
        android:text="2018 ~ 2019"/>

    <ImageView
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18.5dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintTop_toBottomOf="@id/money_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/temperature_image"
        android:background="@drawable/baseline_wb_sunny_24"/>

    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/money_image"
        app:layout_constraintLeft_toRightOf="@id/temperature_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperature_text"
        android:text="2018 ~ 2019"/>

</android.support.constraint.ConstraintLayout>