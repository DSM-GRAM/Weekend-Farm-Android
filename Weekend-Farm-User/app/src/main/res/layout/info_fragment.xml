<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            tools:style="@style/CardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/info_cardview"
            android:layout_marginHorizontal="21dp"
            android:layout_marginBottom="7dp">
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginHorizontal="10dp"
            android:id="@+id/LastDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 수정 날짜: "
            app:layout_constraintRight_toLeftOf="@+id/LastDate"
            app:layout_constraintTop_toBottomOf="@id/info_cardview"/>

        <TextView
            android:id="@+id/LastDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앙 기모띠"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_cardview"/>

        <TextView
            android:layout_marginTop="9dp"
            android:layout_marginBottom="7dp"
            android:layout_marginHorizontal="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fish_text"
            android:text="물고기"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LastDate"/>

        <android.support.v7.widget.CardView
            tools:style="@style/CardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fish_cardview"
            android:layout_marginHorizontal="21dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fish_text">
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginTop="9dp"
            android:layout_marginBottom="7dp"
            android:layout_marginHorizontal="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_text"
            android:text="아이템"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fish_cardview"/>

        <android.support.v7.widget.CardView
            tools:style="@style/CardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_cardview"
            android:layout_marginHorizontal="21dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_text">
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginTop="9dp"
            android:layout_marginBottom="7dp"
            android:layout_marginHorizontal="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부가 설명"
            android:id="@+id/message_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_cardview"/>

        <android.support.v7.widget.CardView
            tools:style="@style/CardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/message_cardview"
            android:layout_marginHorizontal="21dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message_text">
        </android.support.v7.widget.CardView>
    </ScrollView>
</android.support.constraint.ConstraintLayout>